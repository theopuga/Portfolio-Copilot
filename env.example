# Backboard.io Configuration
BACKBOARD_API_KEY=your_api_key_here
# SDK default is https://app.backboard.io/api - leave blank to use SDK default
BACKBOARD_BASE_URL=https://app.backboard.io/api
BACKBOARD_PROJECT_ID=your_project_id_here

# Cost Control
BUDGET_MODE=false
# Set to true to disable STRONG model calls and use template-based explanations

# Production Configuration (Localhost)
# For localhost-only deployment, * is fine
# For public deployment, set to specific domains: https://app.example.com,https://www.example.com
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
# Optional: Path to log file (logs will also go to stdout)
# LOG_FILE=/var/log/portfolio-copilot/app.log

# Server Configuration (for uvicorn)
# HOST=0.0.0.0
# PORT=8000
# WORKERS=4

